<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cada día en más escuelas y hogares"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginTop="20dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.9">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NeuroHelp surge por la acuciante falta de profesionales capaces de atender a niños y niñas con necesidades educativas especiales."
        android:textSize="18sp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Cómo lo hacemos?"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por una parte, a través de diferentes juegos con realidad aumentada estimulamos la creatividad de los niños y niñas a la par que fomentamos la concentración y un uso responsable del dispositivo móvil. Por otra parte ponemos a disposición de familias y profesionales diferentes ejercicios, a través de modelos 3D diseñados a partir del conocimiento de especialistas, con los que poder interactuar y aprender cómo enseñar a niños y niñas tareas cotidianas como lavarse los dientes, atarse los cordones, lavar los platos... Todo desde un enfoque lúdico y educativo y únicamente con la necesidad de disponer de una serie de plantillas incorporadas en el pack de la aplicación y que puede recibir cuantas veces desee por correo electrónico poniéndose en contacto con nosotros."
        android:textSize="15sp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Para qué usamos su cámara?"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Su entorno está a salvo con nosotros, los datos recogidos por la cámara únicamente serán destinados al reconocimiento de las plantillas para la generación de los modelos 3D en realidad aumentada."
        android:textSize="15sp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Para qué usamos el almacenamiento de su teléfono?"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sus datos están a salvo con nosotros, estos serán utilizados a título particular, nunca compartidos con otros usuarios sin su consentimiento. Además, necesitamos del almacenamiento interno de su teléfono para guardar las configuraciones de la aplicación."
        android:textSize="15sp"></TextView>

    <TextView
        android:id="@+id/contacta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:onClick="onClickContacta"
        android:text="Contacta con nosotros"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>
</LinearLayout>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/activity_home_navigation_drawer"/>


</androidx.drawerlayout.widget.DrawerLayout>